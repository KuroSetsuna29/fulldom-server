var app = require('../lib/app.js');
var settings = require('../lib/settings.js');

console.log('Copyright (C) 2015 Alex Jordan <alex@strugee.net>.');
console.log('License AGPLv3+: GNU Affero GPL version 3 or later <http://gnu.org/licenses/agpl-3.0.html>.');
console.log('This is free software: you are free to change and redistribute it. There is NO WARRANTY, to the extent permitted by law.');

var server = app.listen(settings.port, settings.address, function() {
	var host = server.address().address;
	var port = server.address().port;
	console.log('Server listening at http://%s:%s/', host, port);
});
